# Put YouTube into fullscreen and execute this for media mode
bindsym $mod+y fullscreen disable; floating enable; resize set 400 225; sticky enable; move window to position center

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Lock screen.
bindsym $mod+x exec --no-startup-id $locker

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# start a terminal
bindsym $mod+Return exec --no-startup-id $editor

# start a scratchpad terminal.
bindsym $mod+Shift+Return exec --no-startup-id $editor --name __scratchpad

# thunar.
bindsym $mod+n exec --no-startup-id thunar

# resize window (you can also use the mouse for that)
set $mode_resize resize

mode "$mode_resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "$mode_resize"

# Power mode.
set $mode_power System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown

mode "$mode_power" {
    bindsym l exec --no-startup-id $locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym Mod1+Control+l mode "$mode_power"

# Dock mode.
set $mode_dock Laptop (1), Dock (3)

mode "$mode_dock" {
    bindsym 0 exec --no-startup-id autorandr --change && sleep 1, mode "default"
    bindsym 1 exec --no-startup-id autorandr --load laptop && sleep 1, mode "default"
    bindsym 3 exec --no-startup-id autorandr --load docked && sleep 1, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+m mode "$mode_dock"

# Order workspaces.
workspace $ws1 output HDMI2
workspace $ws2 output VGA1
workspace $ws3 output eDP1

# Window configuration.
new_window pixel 3

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable

for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [instance="__scratchpad"] floating enable

