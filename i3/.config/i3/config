# Assigns.
assign [instance="__base"] $ws1
assign [instance="__editor"] $ws2
assign [class="(?i)chrome" window_role="app" title="(?i)keep"] $ws4
assign [class="(?i)slack"] $ws4
for_window [class="(?i)chrome" window_role="pop-up" title="(?i)developer"] floating disable, move to workspace $ws5
for_window [class="(?i)spotify"] move to workspace $ws8

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3blocks
  i3bar_command i3bar -t
  font pango:Droid Sans Mono Awesome 10
  tray_output none
  position top
  # mode hide
  colors {
    background $bg-color
    separator #839496
    #                 border              background         text
    focused_workspace  $bg-color          $bg-color          $text-color
    active_workspace   $inactive-bg-color $inactive-bg-color $inactive-text-color
    inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
    urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
  }
}

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Auto lock screen.
exec --no-startup-id xautolock -time 5 -locker $locker

# Screen Layout.
exec_always --no-startup-id autorandr --change
exec --no-startup-id poll-xrandr

# Enable compton.
exec --no-startup-id compton -b

# Start powerline.
exec --no-startup powerline-daemon -q

# Startup apps.
exec --no-startup-id i3-msg "workspace $ws1; exec google-chrome-stable"
exec --no-startup-id $editor --exec "tmux new-session -A -s base" --name "__base"
exec --no-startup-id $editor --exec "tmux new-session -A -s editor" --name "__editor"
exec --no-startup-id spotify

