# Function helper.
function safe_alias() {
  ( type "$1" 2&>1 >/dev/null ) && alias $1="$2"
}

# Easier navigation: .., ..., ~ and -
safe_alias .. "cd .."
safe_alias cd.. "cd .."
safe_alias ... "cd ../.."
safe_alias .... "cd ../../.."
safe_alias ..... "cd ../../../.."
safe_alias ~ "cd ~" # `cd` is probably faster to type though
safe_alias - "cd -"

# mv, rm, cp
safe_alias mv 'mv -v'
safe_alias rm 'rm -i -v'
safe_alias cp 'cp -v'

# System.
safe_alias top 'htop'
safe_alias where which # sometimes i forget
safe_alias hosts 'sudo $EDITOR /etc/hosts'   # yes I occasionally 127.0.0.1 twitter.com ;)
safe_alias ag 'ag -W 200 -f --hidden'
safe_alias attach 'tmux new-session -A -s'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r $HOME/.dircolors && eval "$(dircolors -b $HOME/.dircolors)" || eval "$(dircolors -b)"
    safe_alias ls 'ls --color=auto'
    safe_alias dir 'dir --color=auto'
    safe_alias vdir 'vdir --color=auto'
    safe_alias grep 'grep --color=auto'
    safe_alias fgrep 'fgrep --color=auto'
    safe_alias egrep 'egrep --color=auto'
fi

###
# time to upgrade `ls`
# use coreutils `ls` if possibleâ€¦
hash gls >/dev/null 2>&1 || safe_alias gls="ls"

# always use color, even when piping (to awk,grep,etc)
if gls --color > /dev/null 2>&1; then colorflag="--color"; else colorflag="-G"; fi;
export CLICOLOR_FORCE=1

# ls options: A = include hidden (but not . or ..), F = put `/` after folders, h = byte unit suffixes
safe_alias ls 'gls -h ${colorflag} --group-directories-first'
safe_alias lsd 'ls -l | grep "^d"' # only directories
#    `la` defined in .functions
###

# `cat` with beautiful colors. requires: sudo easy_install -U Pygments
safe_alias c 'pygmentize -O style=monokai -f console256 -g'

# git root
safe_alias gr '[ ! -z `git rev-parse --show-cdup` ] && cd `git rev-parse --show-cdup || pwd`'

# Networking. IP address, dig, DNS
safe_alias ip "dig +short myip.opendns.com @resolver1.opendns.com"
# alias dig="dig +nocmd any +multiline +noall +answer"
# wget sucks with certificates. Let's keep it simple.
#alias wget="curl -O"

# FS alias.
safe_alias diskspace_report "df -P -kHl"
safe_alias free_diskspace_report "diskspace_report"

# Shortcuts
safe_alias g "git"
safe_alias v "vim"

# File size
safe_alias fs "stat -f \"%z bytes\""

# some more ls aliases
safe_alias ll 'ls -alF'
safe_alias la 'ls -A'
safe_alias l 'ls -CF'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
safe_alias alert 'notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Reset check.
unset safe_alias
