[push]
	default = current

[merge]
	tool = fugitive
  conflictstyle = diff3

[mergetool "fugitive"]
  cmd = vim -f -c "Gdiff" "$MERGED"

[mergetool]
  prompt = false

[alias]
	co = checkout
	ec = config --global -e
	up = pull --rebase --prune
	cm = commit -a -m
	ls = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate
	ll = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --numstat
	lnc = log --pretty=format:%h\\ %s\\ [%cn]
	lds = log --pretty=format:%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --date=short
	ld = log --pretty=format:%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --date=relative
	le = log --oneline --decorate
	fl = log -u
	dl = !git ll -1
	dlc = diff --cached HEAD^
	undo = reset HEAD~1 --mixed
	amend = commit -a --amend
	dr = "!f() { git diff $1^..$1; }; f"
	lc = "!f() { git ll $1^..$1; }; f"
	diffr = "!f() { git diff $1^..$1; }; f"
	f = !git ls-files | grep -i
	grep = grep -Ii
	gra = "!f() { A=$(pwd) && TOPLEVEL=$(git rev-parse --show-toplevel) && cd $TOPLEVEL && git grep --full-name -In $1 | xargs -I{} echo $TOPLEVEL/{} && cd $A; }; f"
	la = !git config -l | grep alias | cut -c 7-
	lt = describe --tags --abbrev=0
	cp = cherry-pick
	st = status -s
	cl = clone
	ci = commit
	br = branch
	diff = diff --word-diff
	dc = diff --cached
	r = reset
	r1 = reset HEAD^
	r2 = reset HEAD^^
	rh = reset --hard
	rh1 = reset HEAD^ --hard
	rh2 = reset HEAD^^ --hard
	rh2 = reset HEAD^^ --hard
	sl = stash list
	sa = stash apply
	ss = stash save
  sp = stash pop
  s = stash
	logtree = log --graph --oneline --decorate --all
	pu = push -q
	pure = pull --rebase
	pupu = !git pure && git pu
	back = checkout -
	follow = log --follow --stat --pretty=format:%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --date=short
	follow-merge = log --follow --stat --pretty=format:%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --date=short -m
	lsm = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate --no-merges
  del = push origin --delete
  ac = !git add -A && git commit
  fame = "!git ls-tree -r -z --name-only HEAD -- **/* | xargs -0 -n1 git blame --line-porcelain HEAD |grep  \"^author \"|sort|uniq -c|sort -nr"
  last = "!git for-each-ref --sort='-committerdate' --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))' refs/heads/ | head -n 15"

[core]
	editor = vim
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[credential]
	helper = cache --timeout=3600

[init]
	templatedir = /home/adriangonzalez/.git_template

[fetch]
	prune = true

# [pager]
# 	diff = diff-so-fancy | less --tabs=4 -RFX
# 	show = diff-so-fancy | less --tabs=4 -RFX

[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red
	new = green
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = cyan

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[help]
	autocorrect = 1

[include]
	path = ~/.gitconfig.local

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
