!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

xft.dpi:                 96
Xft.antialias:           true
Xft.rgba:                rgb
Xft.hinting:             true
Xft.hintstyle:           hintslight

!-------------------------------------------------------------------------------
! Rofi settings
!-------------------------------------------------------------------------------

rofi.modi: run,drun,window
rofi.font: System San Francisco Display 16
rofi.columns: 1
rofi.fullscreen: true
rofi.eh: 2
rofi.bw: 0
rofi.location: 0
rofi.padding: 60
rofi.fuzzy: false
rofi.color-enabled: true
rofi.color-window: argb:ee002b37, argb:00002b37, argb:00003642
rofi.color-normal: argb:00002b37, #819396, argb:00002b37, argb:ee003642, #819396
rofi.color-active: argb:00002b37, #008ed4, argb:00002b37, argb:ee003642, #008ed4
rofi.color-urgent: argb:00002b37, #da4281, argb:00002b37, argb:ee003642, #da4281
rofi.separator-style: none

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.termName:          xterm-256color
URxvt.depth:             32
URxvt.geometry:          100x30
URxvt.transparent:       true
URxvt.shading:     20
! URxvt.inheritPixmap: true
! URxvt.fading:      0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:        true
URxvt.saveLines:         1000
URxvt.internalBorder:    3
URxvt.lineSpace:         -1

! Fonts
URxvt.allow_bold:        true
URxvt*font:              xft:Droid Sans Mono Awesome:pixelsize=12:antialias=true,\
                         xft:Droid Sans Mono Awesome:pixelsize=10:antialias=true,\
                         xft:FontAwesome:pixelsize=10:antialias=true

! Fix font space
URxvt*letterSpace:       -2

! Scrollbar
URxvt.scrollStyle:       rxvt
URxvt.scrollBar:         false

! Perl extensions
URxvt.perl-ext-common:   default,matcher
URxvt.matcher.button:    1
URxvt.url-launcher:      /usr/bin/xdg-open

! Cursor
URxvt.cursorBlink:       true
URxvt.cursorColor:       #657b83
URxvt.cursorUnderline:   false

! Pointer
URxvt.pointerBlank:      false

!-------------------------------------------------------------------------------
! Colors settings
! Source http://github.com/altercation/solarized
!-------------------------------------------------------------------------------

*background:             #002b36
*foreground:             #657b83
*fading:                 0
*fadeColor:              #002b36
*cursorColor:            #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

!! urxvt background
! urxvt*background:       #002b36
!rgba:0000/0000/0000/cccc

!! black dark/light
*color0:                 #073642
*color8:                 #002b36

!! red dark/light
